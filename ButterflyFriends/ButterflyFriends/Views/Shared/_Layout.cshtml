@using ButterflyFriends.Areas.Admin.Controllers
@using ButterflyFriends.Models
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
<!DOCTYPE html>
<html id="tag">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Butterfly Friends - @ViewBag.Title</title>
    
    @Styles.Render("~/Content/css")
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    
    @*recapthca*@
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
                @Html.ActionLink("Butterfly Friends", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                <li>
                    <a href="@Url.Action("About", "Home", new {area = ""})">
                        About
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Contact", "Home", new {area = ""})">
                        Contact
                    </a>
                </li>
                @{
                    if (User.Identity.GetUserId() != null)
                    {
                        var manager = new UserManager<ApplicationUser>(new UserStore<ApplicationUser>(new ApplicationDbContext()));
                        ApplicationUser currentUser = manager.FindByIdAsync(User.Identity.GetUserId()).Result;
                        if (currentUser != null)
                        {
                            if (currentUser.AccessLvL == "Admin" || currentUser.AccessLvL == "Owner")
                            {
                                <li>
                                    <a href="@Url.Action("Index", "Home", new {area = "Admin"})">
                                        Admin
                                    </a>
                                </li>
                            }
                        }
                    }
                }
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="container body-content">
    <div class="row">
        <div class="mainDiv col-md-8">
            @RenderBody()

        </div>
        <div class="col-md-1"></div>
        <div class="side col-md-3">
            <p>hi</p>
        </div>
    </div>
    <div class="bottom">
        <p>Social media and contact and stuff</p>
        <hr/>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</div>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
