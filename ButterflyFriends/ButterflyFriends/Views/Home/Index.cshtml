<script>

    var imageNumber = "@imageCount";
    var n = parseInt(imageNumber);
    var slides = [];
    var video = [];
    if (n > 0) {
        for (i = 0; i < n; i++) {
            if ($('#' + i).attr("type") == "image") {
                slides.push({ src: '/File/Carousel?id=' + $('#' + i).val() });
            } else {
                video.push('/File/Carousel?id=' + $('#' + i).val());
            }
        }
        if(video.length > 0) {
            slides.push({ video: {src:video} });
        }


            $('body').vegas({
                delay: 20000,
                animation: 'random',
                shuffle: true,
                slides: slides
            });
    }
    
    
</script>