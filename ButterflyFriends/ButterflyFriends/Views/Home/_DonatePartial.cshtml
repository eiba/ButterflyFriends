            <li class="active"><a data-toggle="tab" href="#DonateSubAmount"></a></li>
            <li><a data-toggle="tab" href="#DonateSubContact"></a></li>
            <li><a data-toggle="tab" href="#DonateSubPayment"></a></li>

        </ul>

        <div class="tab-content">
            <div id="DonateSubAmount" class="tab-pane fade in active">
                @if (Model.Subscriptions.Any())
                {
                @*Donate sub amount*@
                    <h3 style="text-align: center;">Hvor mye ønsker du å donere hver måned?</h3>
