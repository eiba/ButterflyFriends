                    <div class="row">
                        <div class="col-lg-offset-3 col-md-7">
                            <div class="SubSelect">
                                @foreach (var sub in Model.Subscriptions)
                                {
                                    <div class="SubSelect-info" onclick="subAmount(@sub.Id)">
                                        <input type="radio" name="radio" value="@sub.Id" id="@sub.Id" />
