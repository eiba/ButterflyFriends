
@{
    string CurrentName = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["action"]);
    string CurrentController = Convert.ToString(HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"]);

    //dynamic Layout;
    switch (CurrentName + CurrentController)
    {
        case "IndexHome":
            Layout = "~/Views/Shared/_LayoutFrontPage.cshtml";
            break;
        default:
            Layout = "~/Views/Shared/_Layout.cshtml";
            break;
    }
}