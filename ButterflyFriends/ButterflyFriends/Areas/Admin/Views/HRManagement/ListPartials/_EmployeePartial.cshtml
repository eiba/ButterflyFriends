@using ButterflyFriends.Areas.Admin.Models.HRmanagementModels
@model ButterflyFriends.Areas.Admin.Models.HRmanagementModels.EmployeeModel
<div id="employeeModal"></div>
    <div class="row">

        <div class="col-md-12">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title listHeader"><b>Ansatte</b></h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            
                            @using (Ajax.BeginForm("showEmployeeCreate", "HRManagement", new AjaxOptions
                            {
                                UpdateTargetId = "employeeModal",
                                InsertionMode = InsertionMode.Replace,
                                HttpMethod = "GET"


                            }, new { @class = "form-horizontal" }))
                            {
                                <button class="btn btn-sm btn-primary btn-create">Lag ny</button>
                            }
                            

                        </div>
                        <h5 class="text-success statusText">@ViewBag.Success</h5>
                        <h5 class="text-danger statusText">@ViewBag.Error</h5>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list table-hover">
                        <thead>
                        <tr>
                            <th><em class="fa fa-cog"></em></th>
                            <th class="hidden-xs">ID</th>
                            <th>Navn</th>
                            <th>Email</th>
                        </tr>
                        </thead>
                        <tbody>

                        @foreach (var employee in Model.Employees)
                        {

                            var fullname = employee.Fname + " " + employee.Lname;
                            var rowClass = "";
                            if (ViewBag.Success !=null && employee.Id == ViewBag.Id)
                            {
                                rowClass = "success";
                            }
                            else if (ViewBag.Error != null && employee.Id == ViewBag.Id)
                            {
                                rowClass = "danger";
                            }
                            <tr class="@rowClass">
                                <td align="center">
                                    <div class="row">
                                        <div class="col-md-offset-2">
                                            <div class="col-md-3">
                                                @using (Ajax.BeginForm("showEmployeeDetails", "HRManagement", new {id = @employee.Id}, new AjaxOptions
                                                {
                                                    UpdateTargetId = "employeeModal",
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "GET",


                                                }, new {@class = "form-horizontal"}))
                                                {

                                                    <button class="btn btn-primary"><em class="fa fa-user-circle-o"></em></button>
                                                }
                                            </div>
                                            <div class="col-md-3">
                                                @using (Ajax.BeginForm("showEmployeeEdit", "HRManagement", new {id = @employee.Id}, new AjaxOptions
                                                {
                                                    UpdateTargetId = "employeeModal",
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "GET",


                                                }, new {@class = "form-horizontal"}))
                                                {
                                                    <button class="btn btn-default"><em class="fa fa-pencil"></em></button>
                                                }
                                            </div>
                                            <div class="col-md-3">
                                                @if (employee.IsEnabeled)
                                                {
                                                    using (Ajax.BeginForm("employeeDeactivate", "HRManagement", new {id = @employee.Id}, new AjaxOptions
                                                    {
                                                        UpdateTargetId = "updateEmployees",
                                                        InsertionMode = InsertionMode.Replace,
                                                        HttpMethod = "GET",


                                                    }, new {@class = "form-horizontal"}))
                                                    {
                                                        <button class="btn btn-danger"><em class="fa fa-lock"></em></button>

                                                    }
                                                }
                                                else
                                                {
                                                    using (Ajax.BeginForm("employeeActivate", "HRManagement", new {id = @employee.Id}, new AjaxOptions
                                                    {
                                                        UpdateTargetId = "updateEmployees",
                                                        InsertionMode = InsertionMode.Replace,
                                                        HttpMethod = "GET",


                                                    }, new {@class = "form-horizontal"}))
                                                    {
                                                        <button class="btn btn-success"><em class="fa fa-unlock"></em></button>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td class="hidden-xs">@employee.Id</td>
                                <td>@fullname</td>
                                <td>@employee.Email</td>
                            </tr>
                        }

                        </tbody>
                    </table>

                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col col-xs-4">
                            Side 1 of 5
                        </div>
                        <div class="col col-xs-8">
                            <ul class="pagination hidden-xs pull-right">
                                <li><a href="#">1</a></li>
                                <li><a href="#">2</a></li>
                                <li><a href="#">3</a></li>
                                <li><a href="#">4</a></li>
                                <li><a href="#">5</a></li>
                            </ul>
                            <ul class="pagination visible-xs pull-right">
                                <li><a href="#">«</a></li>
                                <li><a href="#">»</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    $(".loader-mask").hide();
</script>