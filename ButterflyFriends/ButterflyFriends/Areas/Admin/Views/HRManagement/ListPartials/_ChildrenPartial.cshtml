@using PagedList.Mvc
@model ButterflyFriends.Areas.Admin.Models.HRmanagementModels.ChildrenModel
@{
    var count = 0;
}
<div class="row">

    <div class="col-md-12">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-6">
                        <h3 class="panel-title listHeader"><b>Fadderbarn</b></h3>
                    </div>
                    <div class="col col-xs-6 text-right">
                        @using (Ajax.BeginForm("showChildCreate", "HRManagement", new { childrenPage = ViewBag.childrenPage }, new AjaxOptions
                        {
                            UpdateTargetId = "Modal",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET"


                        }, new { @class = "form-horizontal" }))
                        {
                            <button class="btn btn-sm btn-primary btn-create">Lag ny</button>
                        }
                    </div>
                    <h5 class="text-success statusText">@ViewBag.Success</h5>
                    <h5 class="text-danger statusText">@ViewBag.Error</h5>
                </div>
            </div>
            <div class="panel-body">
                <div class="loader"></div>
                <table class="table table-striped table-bordered table-list table-hover">
                    <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em></th>
                        <th class="hidden-xs">ID</th>
                        <th>Navn</th>
                        <th>Fødselsdag</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var child in Model.Children)
                    {
                        var fullName = child.Fname + " " + child.Lname;
                        var rowClass = "";
                        if (ViewBag.Success != null && child.Id == ViewBag.Id)
                        {
                            rowClass = "success";
                        }
                        else if (ViewBag.Error != null && child.Id == ViewBag.Id)
                        {
                            rowClass = "danger";
                        }
                        <tr class="@rowClass">
                            <td align="center" style="width: 250px">
                                <div class="row">
                                    <div class="col-md-offset-2">
                                        <div class="col-md-3">
                                            @using (Ajax.BeginForm("showChildDetails", "HRManagement", new { id = @child.Id, childrenPage = ViewBag.childrenPage }, new AjaxOptions
                                            {
                                                UpdateTargetId = "Modal",
                                                InsertionMode = InsertionMode.Replace,
                                                HttpMethod = "GET",


                                            }, new { @class = "form-horizontal" }))
                                            {

                                                <button class="btn btn-primary"><em class="fa fa-user-circle-o"></em></button>
                                            }
                                        </div>
                                        <div class="col-md-3">
                                            @using (Ajax.BeginForm("showChildEdit", "HRManagement", new { id = @child.Id, childrenPage = ViewBag.childrenPage }, new AjaxOptions
                                            {
                                                UpdateTargetId = "Modal",
                                                InsertionMode = InsertionMode.Replace,
                                                HttpMethod = "GET",


                                            }, new { @class = "form-horizontal" }))
                                            {
                                                <button class="btn btn-default"><em class="fa fa-pencil"></em></button>
                                            }
                                        </div>
                                        <div class="col-md-3">
                                            @if (child.isActive)
                                            {
                                                using (Ajax.BeginForm("childDeactivate", "HRManagement", new { id = @child.Id, childrenPage = ViewBag.childrenPage }, new AjaxOptions
                                                {
                                                    UpdateTargetId = "updateChildren",
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "POST",


                                                }, new { @class = "form-horizontal", id=count +"cd" }))
                                                {
                                                    <button class="btn btn-danger" onclick="appendFilterChildren(event, this)"><em class="fa fa-lock"></em></button>

                                                }
                                            }
                                            else
                                            {
                                                using (Ajax.BeginForm("childActivate", "HRManagement", new { id = @child.Id, childrenPage = ViewBag.childrenPage }, new AjaxOptions
                                                {
                                                    UpdateTargetId = "updateChildren",
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "POST",


                                                }, new { @class = "form-horizontal",id=count +"ca" }))
                                                {
                                                    <button class="btn btn-success" onclick="appendFilterChildren(event, this)"><em class="fa fa-unlock"></em></button>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="hidden-xs">@child.Id</td>
                            <td>@fullName</td>
                            <td>@child.DoB.ToString("dd/MM/yyyy")</td>
                        </tr>
                        count += 1;
                    }
                    </tbody>
                </table>

            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col col-xs-4">
                        @if (@Model.Children.PageCount != 0)
                        {
                            <span>Side @Model.Children.PageNumber av @Model.Children.PageCount</span>
                        }
                        else
                        {
                            <span>Ingen Resultater</span>
                        }
                    </div>
                    <div class="col col-xs-8">

                        <div id="childrenPager">
                            <ul class="pagination hidden-xs pull-right">
                                @Html.PagedListPager(Model.Children, childrenPage => Url.Action("ChildrenList", "HRManagement", new { childrenPage }))
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function appendFilterChildren(e, b) {

        e.preventDefault();
        var formId = b.parentNode.id;

        $('<input />').attr('type', 'hidden')
          .attr('name', "search")
          .attr('value', $('#ChildsearchField').val())
          .appendTo('#'+formId);

        $('<input />').attr('type', 'hidden')
        .attr('name', "active")
        .attr('value', $('#ChildActive input:radio:checked').val())
        .appendTo('#' + formId);

        $('<input />').attr('type', 'hidden')
       .attr('name', 'order')
       .attr('value', $('#ChildOrderFilter input:radio:checked').val())
       .appendTo('#' + formId);

        $('<input />').attr('type', 'hidden')
       .attr('name', 'filter')
       .attr('value', $("#ChildSelected option:selected").val())
       .appendTo('#' + formId);

        $('<input />').attr('type', 'hidden')
       .attr('name', 'ChildDoB')
       .attr('value', $('#ChildDoB').val())
       .appendTo('#' + formId);

        $('<input />').attr('type', 'hidden')
       .attr('name', 'ChildSponsor')
       .attr('value', $('#ChildSponsor').val())
       .appendTo('#' + formId);

        $("form#" + formId).submit();

    }
</script>