@using PagedList.Mvc
@model PagedList.IPagedList<DbTables.Subscriptions>

<div class="row">

    <div class="col-md-12">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-6">
                        <h3 class="panel-title listHeader" style="margin-left: 450px;"><b>Donasjonsplaner</b></h3>
                    </div>
                    <div class="col col-xs-6 text-right">

                        @using (Ajax.BeginForm("showPlanCreate", "Donations", new { planPage = ViewBag.planPage }, new AjaxOptions
                        {
                            UpdateTargetId = "Modal",
                            InsertionMode = InsertionMode.Replace,
                            HttpMethod = "GET"



                        }, new { @class = "form-horizontal" }))
                        {
                            <button class="btn btn-sm btn-primary btn-create">Lag ny</button>
                        }


                    </div>
                    <h5 class="text-success statusText">@ViewBag.Success</h5>
                    <h5 class="text-danger statusText">@ViewBag.Error</h5>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-list table-hover">

                    <thead>
                        <tr>
                            <th><em class="fa fa-cog"></em></th>
                            <th class="hidden-xs">ID</th>
                            <th>Mengde</th>
                            <th>Navn</th>
                        </tr>
                    </thead>

                    <tbody>


                        @foreach (var plan in Model)
                        {

                            var rowClass = "";
                            if (ViewBag.Success != null && plan.Id == ViewBag.Id)
                            {
                                rowClass = "success";
                            }
                            else if (ViewBag.Error != null && plan.Id == ViewBag.Id)
                            {
                                rowClass = "danger";
                            }
                            <tr class="@rowClass">

                                <td align="center">
                                    <div class="row">
                                        <div class="col-md-3"></div>
                                        @* <div class="col-md-3">
        @using (Ajax.BeginForm("showSponsorDetails", "HRManagement", new { id = @plan.Id, planPage = ViewBag.planPage }, new AjaxOptions
        {
            UpdateTargetId = "Modal",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "GET",


        }, new { @class = "form-horizontal" }))
        {

            <button class="btn btn-primary"><em class="fa fa-user-circle-o"></em></button>
        }
    </div>*@
                                        <div class="col-md-3">
                                            @using (Ajax.BeginForm("showPlanDelete", "Donations", new {id = @plan.Id, planPage = ViewBag.planPage}, new AjaxOptions
                                            {
                                                UpdateTargetId = "Modal",
                                                InsertionMode = InsertionMode.Replace,
                                                HttpMethod = "GET",


                                            }, new {@class = "form-horizontal"}))
                                            {
                                                <button class="btn btn-danger"><em class="fa fa-trash"></em></button>
                                            }
                                        </div>
                                        <div class="col-md-3">
                                            @if (plan.Enabeled)
                                            {
                                                using (Ajax.BeginForm("planDeactivate", "Donations", new {id = @plan.Id, planPage = ViewBag.planPage}, new AjaxOptions
                                                {
                                                    UpdateTargetId = "updateSponsors",
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "POST",


                                                }, new {@class = "form-horizontal"}))
                                                {
                                                    <button class="btn btn-danger" onclick="appendFilterSponsor(event, this)"><em class="fa fa-lock"></em></button>

                                                }
                                            }
                                            else
                                            {
                                                using (Ajax.BeginForm("planActivate", "Donations", new {id = @plan.Id, planPage = ViewBag.planPage}, new AjaxOptions
                                                {
                                                    UpdateTargetId = "updateSponsors",
                                                    InsertionMode = InsertionMode.Replace,
                                                    HttpMethod = "POST",


                                                }, new {@class = "form-horizontal"}))
                                                {
                                                    <button class="btn btn-success" onclick="appendFilterSponsor(event, this)"><em class="fa fa-unlock"></em></button>
                                                }
                                            }
                                        </div>
                                        <div class="col-md-3"></div>

                                    </div>
                                </td>
                                <td class="hidden-xs">@plan.Id</td>
                                <td>@plan.Amount</td>
                                <td>@plan.Name</td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col col-xs-4">
                        @if (@Model.PageCount != 0)
                        {
                            <p>Side @Model.PageNumber av @Model.PageCount</p>
                        }
                        else
                        {
                            <p>Ingen Resultater</p>
                        }
                    </div>
                    <div class="col col-xs-8">

                        <div id="sponsorPager">
                            <ul class="pagination hidden-xs pull-right">
                                @Html.PagedListPager(Model, planPage => Url.Action("PlanList", "Donations", new { planPage }))
                            </ul>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>