@model IList<ButterflyFriends.Areas.Admin.Models.Subscription>

<h5 class="statusText">@ViewBag.Message</h5>
<h5 class="text-danger statusText">@ViewBag.Error</h5>
@if (!Model.Any())
{
    <br/>
    <p>Søk med Stripe kunde id for å hente abonnementer</p>
    return;
}
<div class="row">

    <div class="col-md-12">
        <div class="panel panel-default panel-table">
            <div class="panel-heading">
                <div class="row">
                    <div class="col col-xs-12">
                        <h3 class="panel-title listHeader" style="text-align: center;">
                            <b>Abonnementer</b>
                        </h3>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered table-list table-hover">

                    <thead>
                    <tr>
                        <th class="hidden-xs">Abonnements ID</th>
                        <th>Kunde ID</th>
                        <th>Plan ID</th>
                        <th>Plan navn</th>
                        <th>Plan mengde</th>

                    </tr>
                    </thead>

                    <tbody>


                    @foreach (var sub in Model)
                    {
                        <tr>

                            <td>@sub.SubId</td>
                            <td>@sub.CustomerId</td>
                            <td>@sub.PlanId</td>
                            <td>@sub.PlanName</td>
                            <td>@sub.Amount kr</td>

                        </tr>
                    }

                    </tbody>
                </table>

            </div>
            <div class="panel-footer">
                <div class="row">
