<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Butterfly Friends - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/vue.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/jquery.facedetection.min.js"></script>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @RenderSection("scripts", required: false)
    
    @*ContentTools*@
    <link href="~/Scripts/ContentTools/content-tools.min.css" rel="stylesheet" />
    
</head>
<body class="bodyAdmin">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Butterfly Friends", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home", new {area = "Admin"})">
                            Admin
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content body-contentAdmin">
        @RenderBody()
        @*<hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>
</body>
</html>