@model DbTables.Facebook
<div class="row">
    <h5 id="FacebookError" class="text-danger" style="margin-left: 20px">@ViewBag.Error</h5>
    <h5 id="FacebookSuccess" class="text-success" style="margin-left: 20px">@ViewBag.Success</h5>
    @if (Model.Id != 0)
    {
        if (Model.Enabeled)
        {
            <button class="btn btn-danger" onclick="enableFacebook(false)" style="float: right;  margin-right: 20px; margin-bottom: 5px;">Slå av <i class="fa fa-stop" aria-hidden="true"></i></button>
        }
        else
        {
            <button class="btn btn-success" onclick="enableFacebook(true)" style="float: right; margin-right: 20px; margin-bottom: 5px;">Slå på <i class="fa fa-play" aria-hidden="true"></i></button>
        }
    }
    <div class="col-md-2">
        <h4>Facebook</h4>
    </div>
    <div class="col-md-10">
        <button class="btn btn-primary" onclick="showFacebook()" style="float: right;">Rediger <i class="fa fa-pencil-square-o" aria-hidden="true"></i></button>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Url</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @if (string.IsNullOrWhiteSpace(Model.Url))
            {
                <td>Ingen url funnet</td>
            }
            else
            {
                <td>@Model.Url</td>
            }
           
        </tr>
    </tbody>
</table>

@*Sendgrid*@
<script type="x/template" id="FacebookTemplate">
    <div class="modal-mask" v-on:click="close" v-show="show" transition="modal">
        <div class="modal-wrapper">
            <div class="modal-container" v-on:click.stop>

                <div class="modal-header">
                    <slot name="header">
                    </slot>
                </div>

                <div class="modal-body">
                    <slot name="body">

                    </slot>

                </div>

                <div class="modal-footer">
                    <slot name="footer">
                        <button class="btn btn-primary btn-primary" id="knapp" v-on:click="closeButton">Lagre <span class="glyphicon glyphicon-floppy-save"></span></button>

                    </slot>
                </div>
            </div>
        </div>
    </div>
</script>

<div id="Facebook">

    <modal :show.sync="showModal">

        <h3 slot="header" style="text-align: center;">Facebook</h3>
        <h5 slot="body">
            @using (Ajax.BeginForm("EditFacebook", "Various", new AjaxOptions
            {

                UpdateTargetId = "updateFacebook",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST",

            }, new { @class = "form-horizontal", role = "form", id = "FacebookForm" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Url, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input name="Url" value="@Model.Url" class="form-control" id="model">
                        </div>
                    </div>

                </div>

            }
        </h5>
    </modal>
</div>
<script>
    //sendgrid
    Vue.component('modal', {
        template: '#FacebookTemplate',
        props: {
            show: {
                type: Boolean,
                required: true,
                twoWay: true

            }
        },
        methods: {
            close: function () {
                this.show = false;
            },
            closeButton: function () {
                $("form#FacebookForm").submit();
                this.show = false;

            }
        },
        ready: function () {
            document.addEventListener("keydown", (e) => {
                if (this.show && e.keyCode == 27) {
                    this.close();
                } else if (this.show && e.keyCode == 13) {
                    e.preventDefault();
                    this.closeButton();
                }
            });
        }
    });

    var facebookVue = new Vue({
        el: '#Facebook',
        data: {
            showModal: false,
        }
    });
</script>

