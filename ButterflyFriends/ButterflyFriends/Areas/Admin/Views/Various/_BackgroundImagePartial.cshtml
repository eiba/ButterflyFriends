@model DbTables.BackgroundImage

<h5 id="BackgroundError" class="text-danger">@ViewBag.Error</h5>
<h5 id="BackgroundSuccess" class="text-success">@ViewBag.Success</h5>
@if (Model.Image != null)
{
    if (Model.Enabeled)
    {
        <button class="btn btn-danger" onclick="enableBackground(false)" style="float: right;">Slå av <i class="fa fa-stop" aria-hidden="true"></i></button>
    }
    else
    {
        <button class="btn btn-success" onclick="enableBackground(true)" style="float: right;">Slå på <i class="fa fa-play" aria-hidden="true"></i></button>

    }
}
<table class="table">
    <thead>
        <tr>
            <th>Velg fil</th>
            <th>Filnavn</th>
        </tr>
    </thead>
    <tbody>
        <tr>

            <td>
                <div class="row">
                    <div class="col-md-2">
                        <input type="file" id="backgroundFile" accept="image/*"/>
                    </div>
                    <div class="col-md-10" style="padding-left: 40%; padding-right: 5%;">
                        <div class="row">

                            <button class="btn btn-primary" onclick="uploadBackground()" style="float: right; margin-left: 2px;">Last opp <span class="glyphicon glyphicon-open"></span></button>
                            <div class="progress" id="backgroundProg" hidden>
                                <div class="progress-bar progress-bar-striped active" id="backgroundBar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
                                    0%
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </td>
            <td>
                <ul>
                    @if (Model.Image != null)
                    {
                            <il type="circle">
                                <a href="~/File?id=@Model.Image.FileId" target="_blank">@Model.Image.FileName</a>
                            </il>
                            <br />
                        
                    }
                    else
                    {
                        <li>
                            <p>Ingen fil lagt til</p>
                        </li>
                    }
                </ul>
            </td>
        </tr>
    </tbody>
</table>
